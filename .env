# ============================================
# ULTIMATE LINK BYPASS BOT - ENVIRONMENT CONFIG
# ============================================

# Telegram Bot Token (Get from @BotFather)
BOT_TOKEN=your_bot_token_here

# Admin Configuration
ADMIN_IDS=123456789,987654321
OWNER_ID=123456789

# Force Subscribe Configuration
FORCE_SUB_CHANNEL=@your_channel_username
FORCE_SUB_GROUP=@your_group_username

# Log Channel for reports and errors
LOG_CHANNEL=@your_log_channel

# ============================================
# FIREBASE CONFIGURATION
# ============================================

# Option 1: Individual credentials
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key_here
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Option 2: Service account JSON file path
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# ============================================
# PREMIUM CONFIGURATION
# ============================================

# Free user limits
FREE_DAILY_LIMIT=5
FREE_HOURLY_LIMIT=2

# Referral system
REFERRAL_ENABLED=true
REFERRAL_REWARD_DAYS=3

# ============================================
# AI CONFIGURATION (OpenAI)
# ============================================

OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# ============================================
# WEBHOOK CONFIGURATION (For Render/Production)
# ============================================

# Set to 'true' for webhook mode, 'false' for polling
WEBHOOK_ENABLED=true

# Your Render/external URL (required for webhook)
WEBHOOK_URL=https://your-bot.onrender.com

# Port (Render uses 10000 by default)
PORT=10000

# ============================================
# OPTIONAL: SENTRY FOR ERROR TRACKING
# ============================================

SENTRY_DSN=your_sentry_dsn_here

# ============================================
# OPTIONAL: REDIS FOR CACHING
# ============================================

REDIS_URL=redis://localhost:6379/0
